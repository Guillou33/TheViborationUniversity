<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#34495E">

    <Button
        android:text="Supprimer le morceau"
        android:id="@+id/btnSupprMorceau"
        android:background="@drawable/button_app"
        android:textColor="@color/textColor"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_width="87dp"
        android:layout_height="65dp"
        android:layout_margin="@dimen/spacing"/>

    <Button
        android:layout_width="87dp"
        android:layout_height="65dp"
        android:text="Annuler"
        android:id="@+id/btnAnnulSuppr"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/button_app"
        android:textColor="@color/textColor"
        android:layout_alignBottom="@+id/btnSupprMorceau"
        android:layout_margin="@dimen/spacing"/>

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/btnSupprMorceau"
        android:layout_margin="@dimen/spacing"
        android:descendantFocusability="blocksDescendants"/>

</RelativeLayout>