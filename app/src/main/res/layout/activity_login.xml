<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:gravity="center_horizontal"
    android:orientation="vertical" android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" tools:context=".LoginActivity"
    android:background="#34495E"
    android:weightSum="1">

    <!-- Login progress -->
    <ProgressBar android:id="@+id/login_progress" style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_marginBottom="8dp" android:visibility="gone" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Connectez-vous"
        android:id="@+id/title"
        android:layout_gravity="center_horizontal"
        android:textSize="40dp" />

    <AutoCompleteTextView android:id="@+id/emailBox" android:layout_width="match_parent"
        android:layout_height="wrap_content" android:hint="@string/prompt_email"
        android:inputType="textEmailAddress" android:maxLines="1"
        android:singleLine="true"
        android:layout_marginTop="60dp" />

    <EditText android:id="@+id/passwordBox" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:imeActionId="@+id/login"
        android:imeActionLabel="@string/action_sign_in_short"
        android:imeOptions="actionUnspecified" android:inputType="textPassword"
        android:maxLines="1" android:singleLine="true"
        android:layout_marginTop="40dp"
        android:hint="Mot de passe" />

    <Button android:id="@+id/loginButton" style="?android:textAppearanceMedium"
        android:layout_width="255dp" android:layout_height="50dp"
        android:layout_marginTop="60dp" android:text="Connexion"
        android:textStyle="bold"
        android:layout_weight="0.11"
        android:elegantTextHeight="false"
        android:layout_marginLeft="0dp" />

    <ProgressBar
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:id="@+id/progressBarC"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.23"
        android:indeterminate="false"
        android:layout_marginTop="55dp" />

</LinearLayout>

