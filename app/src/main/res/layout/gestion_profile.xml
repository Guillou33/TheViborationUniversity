<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#34495E">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Photo :"
        android:id="@+id/txtChangePhoto"/>

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/imgProfil"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nom :"
        android:id="@+id/txtChangeNom"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/edtChangeNom"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Prenom :"
        android:id="@+id/txtChangePrenom"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/edtChangePrenom"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Section :"
        android:id="@+id/txtChangeSection"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/edtChangeSection"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mettre Ã  jour"
        android:id="@+id/btnMajProfil"
        android:onClick="majProfil"
        android:layout_below="@+id/imgProfil"
        android:layout_alignRight="@+id/imgProfil"
        android:layout_alignEnd="@+id/imgProfil"
        android:layout_marginTop="40dp" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Annuler"
        android:id="@+id/btnAnnulerProfil"
        android:onClick="annulProfil"
        android:layout_alignTop="@+id/btnMajProfil"
        android:layout_toRightOf="@+id/txtChangePhoto"
        android:layout_toEndOf="@+id/txtChangePhoto" />
</RelativeLayout>