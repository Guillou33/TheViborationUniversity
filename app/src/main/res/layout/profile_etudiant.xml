<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="wrap_content"
    android:layout_height="wrap_content" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#34495E">


    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/imgProfil"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_below="@+id/txtProfil"
        android:id="@+id/panelBtnProfil"
        android:weightSum="1">

        <Button
            android:layout_width="85dp"
            android:layout_height="68dp"
            android:text="Accéder aux étudiants"
            android:id="@+id/btnUtilisateurs"
            android:background="@drawable/button_app"
            android:textColor="@color/textColor"
            android:onClick="accessStudents"
            />

        <Button
            android:layout_width="86dp"
            android:layout_height="67dp"
            android:text="Modifer son profil"
            android:id="@+id/btnModifProfil"
            android:background="@drawable/button_app"
            android:textColor="@color/textColor"
            android:layout_margin="@dimen/spacing"
            android:onClick="accessModifProfil"/>

        <Button
            android:layout_width="87dp"
            android:layout_height="65dp"
            android:text="Accéder aux Chats"
            android:id="@+id/btnChat"
            android:background="@drawable/button_app"
            android:textColor="@color/textColor"
            android:onClick="accessChats"
            />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Nom Prenom Section"
        android:id="@+id/txtProfil"
        android:layout_below="@+id/imgProfil"
        android:layout_centerHorizontal="true" />

    <ListView
        android:background="#76A6AA"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:id="@+id/listMesMusiques"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txtMusiques"
        />

    <TextView
        android:layout_margin="@dimen/spacing"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mes musiques :"
        android:id="@+id/txtMusiques"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/panelBtnProfil"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:id="@+id/btnAjoutMusique"
        android:background="@drawable/button_app"
        android:textColor="@color/textColor"
        android:layout_alignTop="@+id/txtMusiques"
        android:layout_toRightOf="@+id/panelBtnProfil"
        android:layout_alignBottom="@+id/txtMusiques"
        android:layout_alignRight="@+id/listMesMusiques"
        android:layout_alignEnd="@+id/listMesMusiques" />
</RelativeLayout>
